<section id="products" class="bg-gray-100 py-16">
  <div class="max-w-7xl mx-auto px-6">
    <h3 class="text-3xl font-bold mb-10 text-center">Sản phẩm bán chạy</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
      <% for(let i=1; i<=8; i++){ %>
      <div class="bg-white rounded-xl shadow hover:shadow-xl transition">
        <img src="https://via.placeholder.com/400x400"
             class="rounded-t-xl w-full" alt="Sản phẩm <%= i %>">
        <div class="p-4 text-center">
          <h4 class="font-semibold mb-2">Sản phẩm <%= i %></h4>
          <p class="text-indigo-600 font-bold mb-2">₫<%= (i*100000).toLocaleString() %></p>
          <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500">
            Thêm vào giỏ
          </button>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
